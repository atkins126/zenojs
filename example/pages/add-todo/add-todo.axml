<view class="page-add-todo">

  <view class="add-todo">
    <input 
      class="add-todo-input"
      placeholder="What needs to be done?"
      onInput="onChange"
      value="{{inputValue}}"
      focus
    />
  </view>

  <view class="todo-footer">
    <add-button text="Add Todo" onClickMe="add" ></add-button>
  </view>
  
</view>